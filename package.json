{
    "name": "esbuild-plugin-suffix-condition-import",
    "version": "1.0.0",
    "main": "dist/index.js",
    "scripts": {
        "demo": "node demo/build.js",
        "build": "esbuild --bundle --minify --platform=node --target=node10 --outfile=dist/index.js --format=cjs index.js"
    },
    "author": "yuekcc",
    "license": "MIT",
    "prettier": {
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "all",
        "arrowParens": "avoid",
        "endOfLine": "auto"
    },
    "eslintConfig": {
        "env": {
            "browser": true,
            "commonjs": true,
            "es2020": true,
            "jest": true,
            "mocha": true,
            "node": true
        },
        "parserOptions": {
            "sourceType": "module"
        },
        "plugins": [
            "prettier"
        ],
        "extends": [
            "eslint:recommended",
            "plugin:prettier/recommended"
        ]
    },
    "devDependencies": {
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-prettier": "^4.0.0",
        "prettier": "^2.4.0"
    },
    "dependencies": {
        "esbuild": "~0.13.0",
        "lodash.trimend": "^4.5.1"
    }
}
